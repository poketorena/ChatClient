<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChatClient.Views.TalkPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    Title="Talk">

    <StackLayout
        BackgroundColor="Aqua"
        HorizontalOptions="FillAndExpand"
        Spacing="0"
        VerticalOptions="FillAndExpand">
        <ListView
            x:Name="ListViewMazaiNotes"
            BackgroundColor="White"
            ItemsSource="{Binding Talks.Value}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Detail="{Binding Text}" Text="{Binding User.Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <!--<ListView.Behaviors>
                <b:EventToCommandBehavior
                    Command="{Binding ItemSelectedCommand}"
                    EventArgsParameterPath="Item"
                    EventName="ItemTapped" />
            </ListView.Behaviors>-->
        </ListView>
        <StackLayout
            BackgroundColor="NavajoWhite"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal">
            <Entry HorizontalOptions="FillAndExpand" Text="{Binding InputText.Value}" />
            <Button
                Command="{Binding SendTextCommand}"
                Text="送信"
                WidthRequest="80" />
        </StackLayout>
    </StackLayout>

</ContentPage>